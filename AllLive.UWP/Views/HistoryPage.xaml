<Page
    x:Class="AllLive.UWP.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:controls="using:AllLive.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AllLive.UWP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AllLive.UWP.Models"
    mc:Ignorable="d">

    <Grid>
        <ProgressBar Minimum="0" Maximum ="1" Value="{x:Bind Path=historyVM.LoadingProgress, Mode=OneWay}" Visibility="{x:Bind Path=historyVM.LoadingLiveStatus, Mode=OneWay}"  VerticalAlignment="Top">
            <ProgressBar.RenderTransform>
                <ScaleTransform ScaleY="0.5" />
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <controls:MyAdaptiveGridView
            Margin="8"
            CanLoadMore="False"
            DesiredWidth="400"
            IsItemClickEnabled="True"
            ItemClick="ls_ItemClick"
            ItemHeight="72"
            ItemsSource="{x:Bind Path=historyVM.Items}"
            SelectionMode="None"
            StretchContentForSingleRow="False">
            <controls:MyAdaptiveGridView.ItemContainerStyle>
                <Style BasedOn="{StaticResource GridViewItemCornerRadiusStyle}" TargetType="GridViewItem">
                    <Setter Property="Margin" Value="4" />
                    <Setter Property="Padding" Value="8,4" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                    <Setter Property="Background" Value="{ThemeResource ButtonBackground}" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </controls:MyAdaptiveGridView.ItemContainerStyle>
            <controls:MyAdaptiveGridView.ItemTemplate>
                <DataTemplate x:DataType="models:HistoryItem">
                    <Grid>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="MenuFlyoutItem_Click"
                                    Icon="Delete"
                                    Text="移除" />
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <PersonPicture
                            Width="56"
                            Height="48"
                            Background="Blue"
                            BorderThickness="0"
                            ProfilePicture="{x:Bind Path=Photo}" />
                        <StackPanel
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Path=UserName}" />
                            <TextBlock Text="{x:Bind Path=Title, Mode=OneWay}"
                                 Margin="0,4,30,0"
                                 FontSize="12"
                                 TextWrapping="NoWrap" 
                                 Foreground="DimGray"
                                 TextTrimming="CharacterEllipsis" 
                                 ToolTipService.ToolTip="{x:Bind Path=Title, Mode=OneWay}">
                            </TextBlock>
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="11"
                                HorizontalAlignment="Right"
                                Foreground="Gray">
                                观看于<Run Text="{x:Bind Path=WatchTime, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                        <SymbolIcon Grid.Column="2" Height="36" Width="36" Foreground="#3855BD" VerticalAlignment="Center" HorizontalAlignment="Right" 
                               Symbol="Play" Visibility="{x:Bind Path=Status, Mode=OneWay}">
                        </SymbolIcon>
                    </Grid>
                </DataTemplate>
            </controls:MyAdaptiveGridView.ItemTemplate>
        </controls:MyAdaptiveGridView>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Gray"
            Visibility="{x:Bind Path=historyVM.IsEmpty, Mode=OneWay}">
            这里还什么都没有~
        </TextBlock>
        <StackPanel
            Margin="12"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Button
                Width="48"
                Height="48"
                Windows10version1809:CornerRadius="24"
                Command="{x:Bind Path=historyVM.CleanCommand}"
                Visibility="{x:Bind Path=historyVM.Loading, Mode=OneWay, Converter={StaticResource displayConvert}}">
                <SymbolIcon Symbol="Delete" />
            </Button>
            <Button
                Width="48"
                Height="48"
                Margin="0,12,0,0"
                Windows10version1809:CornerRadius="24"
                Command="{x:Bind Path=historyVM.RefreshCommand}"
                Visibility="{x:Bind Path=historyVM.Loading, Mode=OneWay, Converter={StaticResource displayConvert}}">
                <SymbolIcon Symbol="Refresh" />
            </Button>
            <Border
                Width="48"
                Height="48"
                Margin="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="{ThemeResource ButtonBackground}"
                CornerRadius="24"
                Visibility="{x:Bind Path=historyVM.LoadingLiveStatus, Mode=OneWay}">
                <ProgressRing Width="24" IsActive="True" />
            </Border>
        </StackPanel>
    </Grid>
</Page>
